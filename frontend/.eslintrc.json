{
  "env": {
    "browser": true
  },
  "extends": [
    "airbnb",
    "prettier"
  ],
  "plugins": [
    "react",
    "prettier"
  ],
  "parser": "babel-eslint",
  "rules": {
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "no-multiple-empty-lines": [2, {"max": 2}],
    "max-len": [2, {
      "code": 100,
      "ignoreTrailingComments": true
    }],
    "import/first": 0,
    "import/no-duplicates": 0,
    "no-duplicate-imports": 0,
    "no-underscore-dangle": 0,
    "class-methods-use-this": 0,
    "prettier/prettier": [
      "error",
      {
        "singleQuote" : true,
        "trailingComma": "es5"
      }
    ]
  }
}
